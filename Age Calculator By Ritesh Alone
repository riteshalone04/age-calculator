    <div class="container">
        <h1>AGE CALCULATOR<br><span style="font-size:0.7em;">(DESIGNED BY RITESH ALONE)</span></h1>
        <form id="ageForm" autocomplete="off">
            <label for="day">Enter Date of Birth:</label>
            <input type="number" id="day" name="day" min="1" max="31" placeholder="DD" required>
            <input type="number" id="month" name="month" min="1" max="12" placeholder="MM" required>
            <input type="number" id="year" name="year" min="1900" max="2100" placeholder="YYYY" required>
            <br>
            <button type="submit">Calculate Age</button>
        </form>
        <div class="result" id="result"></div>
    </div>
    <div class="footer">Â© 2025 Ritesh Alone</div>
    <script>
        document.getElementById('ageForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // Get DOB values
            const d = parseInt(document.getElementById('day').value, 10);
            const m = parseInt(document.getElementById('month').value, 10);
            const y = parseInt(document.getElementById('year').value, 10);

            // Get today
            const today = new Date();
            let cy = today.getFullYear();
            let cm = today.getMonth() + 1;
            let cd = today.getDate();

            let age = cy - y - ((cm < m) || (cm === m && cd < d) ? 1 : 0);

            let resultDiv = document.getElementById('result');
            if (age < 0 || y < 1900 || m < 1 || m > 12 || d < 1 || d > 31) {
                resultDiv.style.color = "#c0392b";
                resultDiv.textContent = "Invalid Date of Birth";
            } else {
                resultDiv.style.color = "#27ae60";
                resultDiv.textContent = "Your age: " + age + " years";
            }
        });
    </script>
